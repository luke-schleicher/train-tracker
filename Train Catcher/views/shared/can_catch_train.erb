<body class="can-catch-train">

<%= erb :"shared/nav", :locals => { :closest_station => closest_station } %>

<main>
  <section class="container">
    <section class="train-message">
        <h1>You can still catch the next train!</h1>
      <p>You have <%= minutes_until_train_arrives%> minutes to catch the next train at <%= closest_station %>.</p>
      <i class="fa fa-train fa-4x" aria-hidden="true"></i>
    </section>
  </section>
</main>

<%= erb :"shared/footer" %>

</body>